<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KeyToss.SignUpPage">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="30,0" Spacing="25">
                <Label Text="Sign up"
                    FontSize="56"
                    Margin="0,0,0,25"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"/>

                <Label Text="Username"
                    FontSize="14"
                    FontAttributes="Bold"
                    Margin="0,0,0,5" />
                <Entry x:Name="UsernameEntry" 
                    Placeholder="Value"
                    Margin="0,0,0,15" />

                <Label Text="Email"
                    FontSize="14"
                    FontAttributes="Bold"
                    Margin="0,0,0,5" />
                <Entry x:Name="EmailEntry" 
                    Placeholder="Value"
                    Keyboard="Email"
                    Margin="0,0,0,15" />

                <Label Text="Password"
                    FontSize="14"
                    FontAttributes="Bold"
                    Margin="0,0,0,5" />
                <Entry x:Name="PasswordEntry" 
                    Placeholder="Value"
                    Margin="0,0,0,15" IsPassword="True"/>

                <Label Text="Confirm Password"
                    FontSize="14"
                    FontAttributes="Bold"
                    Margin="0,0,0,5" />
                <Entry x:Name="ConfirmPasswordEntry" 
                    Placeholder="Value"
                    Margin="0,0,0,25" IsPassword="True"/>

                <Button Text="Sign Up"
                    CornerRadius="4"
                    HeightRequest="40"
                    Margin="0,10,0,0"
                    x:Name="SignUpButton"
                    Clicked="OnSignUpButtonClicked"/>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>