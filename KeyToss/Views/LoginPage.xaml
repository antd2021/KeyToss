<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KeyToss.Views.LoginPage"
             Title="">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label  
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontSize="56"
                FontAttributes="Bold"
                Text="Key Toss"
                />

            <Label
                Text="Username"
                />
            <Entry x:Name="Username"/>

            <Label
                Text="Email"
                />
            <Entry x:Name="Email"/>

            <Label
                Text="Password"
                />
            <Entry x:Name="Password"/>

            <Label
                Text="Confirm Password"
                />
            <Entry x:Name="PasswordConfirm"/>
            <VerticalStackLayout>
                <Button
                    x:Name="SignUpBtn"
                    Text="Sign Up"
                    Clicked="SignUpBtn_Clicked"/>
                <Label
                    Text="Sign Up Here"
                    HorizontalOptions="Center"
                    Padding="10"
                    TextColor="CadetBlue"
                    TextDecorations="Underline"
                    >
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>