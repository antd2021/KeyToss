<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KeyToss.Views.LoginPage"
             Title="LoginPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Username"
                />
            <Entry x:Name="Username"/>

            <Label
                Text="Email"
                />
            <Entry x:Name="Email"/>

            <Label
                Text="Password"
                />
            <Entry x:Name="Password"/>

            <Label
                Text="Confirm Password"
                />
            <Entry x:Name="PasswordConfirm"/>
            <VerticalStackLayout>
                <Button
                    x:Name="SignUpBtn"
                    Text="Sign Up"
                    />
                <Label
                    Text="Sign Up Here"
                    >
                    <Label.GestureRecognizers
                        x:Name="SignUpLabel"
                        Tapped=""
                        />
                </Label>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>